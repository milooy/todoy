{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": [
            "error",            
            {
              "singleQuote": true,
              "semi": true,
              "useTabs": false,
              "tabWidth": 2,
              "trailingComma": "all",
              "printWidth": 80,
              "bracketSpacing": true,
              "arrowParens": "avoid"
            }
        ]
    }
}
